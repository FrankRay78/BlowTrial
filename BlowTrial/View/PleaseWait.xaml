<Window x:Class="BlowTrial.View.PleaseWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Wait" Height="100" Width="300">
    <Grid>
        <TextBlock TextWrapping="Wrap">
            The application is currently communicating with another computer over a cloud folder. This can be very slow. Please do not shut the application down until this window has disappeared.
        </TextBlock>
    </Grid>
</Window>
